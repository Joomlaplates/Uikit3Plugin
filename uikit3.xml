<updateservers>
    <server type="extension" priority="2" name="Uikit 3 Plugin">https://www.joomlaplates.de/updates/uikit/plg_uikit3.xml</server>
 </updateservers>
	
	<files>
		<filename plugin="uikit3">uikit3.php</filename>
		<filename>uikit3.php</filename>
		<filename>index.html</filename>
		<filename>license.txt</filename>
	</files>
	   <media folder="media" destination="uikit3">
		  <folder>css</folder>
		  <folder>js</folder>
	   </media>

        <config>
            <fields name="params">
                <fieldset name="basic">
				
					<field name="uikit" type="radio" default="1" label="How to load UIkit 3 Plugin" class="btn-group" >
                        <option value="1">Local</option>
                        <option value="0">Extern (CDN)</option>
                    </field>
                </fieldset>
            </fields>
        </config>
</extension>